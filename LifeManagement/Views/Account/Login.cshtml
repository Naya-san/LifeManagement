@model LifeManagement.ViewModels.LoginViewModel
@using LifeManagement.Resources
@{
    ViewBag.Title = ResourceScr.login;
}

<div class="rowLM">
    <div class="login"></div>
    <div class="LMсol-md-8">
        <h2>@ViewBag.Title</h2>
        <section id="loginForm">
            @using (Html.BeginForm("Login", "Account", new {ReturnUrl = ViewBag.ReturnUrl}, FormMethod.Post, new {@class = "form-horizontalLM", role = "form"}))
            {
                @Html.AntiForgeryToken()
                @Html.ValidationSummary(true)
                <div class="form-group">
                    @Html.LabelFor(m => m.UserName, new {@class = "LMсol-md-2 control-label"})
                    <div class="LMсol-md-10">
                        @Html.TextBoxFor(m => m.UserName, new {@class = "form-control longer"})
                        @Html.ValidationMessageFor(m => m.UserName)
                    </div>
                </div>
                <div class="form-group">
                    @Html.LabelFor(m => m.Password, new {@class = "LMсol-md-2 control-label"})
                    <div class="LMсol-md-10">
                        @Html.PasswordFor(m => m.Password, new {@class = "form-control longer"})
                        @Html.ValidationMessageFor(m => m.Password)
                    </div>
                </div>
                <div class="form-group">
                    <div class="LMсol-md-10" style="padding-left: 40px">
                        <div class=" checkbox">
                            
                            @Html.CheckBoxFor(m => m.RememberMe)
                            @Html.LabelFor(m => m.RememberMe)
                        </div>
                    </div>
                </div>
                <div class="form-group">
                    <div class="LMсol-md-10">
                        <input type="submit" value="@ResourceScr.login" class="btn btn-default"/>
                    </div>
                </div>
                <p>
                    @Html.ActionLink(ResourceScr.register, "Register") @ResourceScr.IfNoAccount.
                </p>
            }
        </section>
    </div>
</div>
@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}