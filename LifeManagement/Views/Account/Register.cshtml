@model LifeManagement.ViewModels.RegisterViewModel
           @using LifeManagement.Resources
@{
    ViewBag.Title = ResourceScr.RegisterForm;
}

<h2>@ViewBag.Title</h2>

@using (Html.BeginForm("Register", "Account", FormMethod.Post, new { @class = "form-horizontalLM", role = "form" }))
{
    @Html.AntiForgeryToken()
    @Html.ValidationSummary()
    <div class="form-group">
        @Html.LabelFor(m => m.UserName, new { @class = "LMсol-md-2 control-label" })
        <div class="LMсol-md-10">
            @Html.TextBoxFor(m => m.UserName, new { @class = "form-control longer" })
        </div>
    </div>
    <div class="form-group">
        @Html.LabelFor(m => m.Password, new { @class = "LMсol-md-2 control-label" })
        <div class="LMсol-md-10">
            @Html.PasswordFor(m => m.Password, new { @class = "form-control longer" })
        </div>
    </div>
    <div class="form-group">
        @Html.LabelFor(m => m.ConfirmPassword, new { @class = "LMсol-md-2 control-label" })
        <div class="LMсol-md-10">
            @Html.PasswordFor(m => m.ConfirmPassword, new { @class = "form-control longer" })
        </div>
    </div>
    <div class="form-group">
        <div class="LMсol-md-offset-2 LMсol-md-10">
            <input type="submit" class="btn btn-default" value="@ResourceScr.register" />
        </div>
    </div>
}

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
