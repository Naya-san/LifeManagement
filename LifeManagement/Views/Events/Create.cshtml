@using System.Web.Mvc.Html5
@model LifeManagement.Models.DB.Event

@{
    ViewBag.Title = "Create";
}

<script type='text/javascript' src="@Url.Content("~/Scripts/availableFields.js")"></script>

@using (Html.BeginForm()) 
{
    @Html.AntiForgeryToken()
    
    <div class="form-horizontal">
        @Html.ValidationSummary(true)
        
        <div class="form-group">
            @Html.LabelFor(model => model.Name, htmlAttributes: new { @class = "control-label col-md-3" })
            <div class="col-md-9">
                @Html.Html5EditorFor(model => model.Name, htmlAttributes: new {@required = "true", @class = "longer"})
                @Html.ValidationMessageFor(model => model.Name)
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.StartDate, htmlAttributes: new { @class = "control-label col-md-3" })
            <div class="col-md-9">
                @Html.Html5Editor("StartTime", InputTypes.InputType.Time, htmlAttributes: new { @value = "00:00" , @required = "true"})
                @Html.Html5EditorFor(model => model.StartDate, InputTypes.InputType.Date, htmlAttributes: new {@required = "true", @value = ViewBag.Date})
                @Html.ValidationMessageFor(model => model.StartDate)
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.EndDate, htmlAttributes: new { @class = "control-label col-md-3" })
            <div class="col-md-9">
                @Html.Html5Editor("EndTime", InputTypes.InputType.Time, htmlAttributes: new { @value = "23:59", @required = "true" })
                @Html.Html5EditorFor(model => model.EndDate, InputTypes.InputType.Date, htmlAttributes: new { @required = "true", @value = ViewBag.Date })
                @Html.ValidationMessageFor(model => model.EndDate)
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.Note, htmlAttributes: new { @class = "control-label col-md-3" })
            <div class="col-md-9">
                @Html.TextAreaFor(model => model.Note, htmlAttributes: new { @class = "longer" })
                @Html.ValidationMessageFor(model => model.Note)
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.IsUrgent, htmlAttributes: new { @class = "control-label col-md-3" })
            <div class="col-md-9">
                @Html.EditorFor(model => model.IsUrgent)
                @Html.ValidationMessageFor(model => model.IsUrgent)
            </div>
        </div>

        <div class="form-group">
            @Html.Label(LifeManagement.Resources.ResourceScr.Tags, htmlAttributes: new { @class = "control-label col-md-3" })
            <div class="col-md-9">
                @Html.ListBox("Tags")
            </div>
        </div>
        <div class="form-group">
            @Html.Label(@LifeManagement.Resources.ResourceScr.Alerts, htmlAttributes: new { @class = "control-label col-md-3" })
            <div class="col-md-9">
                @Html.DropDownList("Alerts")
            </div>
        </div>
        <div class="form-group">
            @Html.Label(@LifeManagement.Resources.ResourceScr.Repeat, htmlAttributes: new { @class = "control-label col-md-3" })
            <div class="col-md-9">
                <table>
                    <tr>
                        <td>
                            @SelectExtensions.DropDownList(Html, "RepeatPosition", ViewBag.RepeatPosition, htmlAttributes: new { @onchange = "showDate()" })
                        </td>
                        <td >
                            <div id="ForHide" style="display: none">
                                @LifeManagement.Resources.ResourceScr.till
                                @Html.Html5EditorFor(model => model.StopRepeatDate, InputTypes.InputType.Date, htmlAttributes: new { @required = "true", @value = ViewBag.DateR })
                            </div>
                          
                        </td>
                    </tr>
                </table>
            </div>
        </div>
        <div class="buttonbar">
            <input type="submit" value="@LifeManagement.Resources.ResourceScr.submit" class="btn btn-default fullsize" />
        </div>
    </div>
}
