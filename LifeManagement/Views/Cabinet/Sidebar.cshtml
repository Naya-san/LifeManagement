@{
    Layout = null;
}

@using LifeManagement.Models.DB
@using LifeManagement.Resources
@model IEnumerable<Project>

<link href="@Url.Content("~/Content/Site.css")" rel="stylesheet" type="text/css" />
<script type='text/javascript' src="@Url.Content("~/Scripts/tree.js")"></script>

<div>
    <div>
        <ul class="tree">
            <li>@ResourceScr.Focus</li>
            <li>@ResourceScr.AllTask</li>
            <li>@ResourceScr.AllEvents</li>            
            
            <li>
                <div id="chapter_img1" onclick="doMenu('1');" class="closeBlock">@ResourceScr.Projects</div>
                <ul id="chapter1" class="subtree">
                    @foreach (var item in Model)
                    {
                        <li class="subpunct">@Html.ActionLink(" ", "Edit", "Projects", new { id = item.Id }, new { @class = "edit" }) @Html.ActionLink(item.Name, "GetTasks", "Projects", new { id = item.Id }, null) </li>
                    }
                    <li>@Html.ActionLink(ResourceScr.addProject, "Create", "Projects", null, new { @class = "addBlock" })</li>
                </ul>
            </li>
            <li>
                <div id="chapter_img2" onclick="doMenu('2');" class="closeBlock">@ResourceScr.Tags</div>
                <ul id="chapter2" class="subtree">
                    @{Html.RenderAction("TagsList", "Cabinet");}
                </ul>
            </li>
        </ul>
    </div>
</div>