@using System.Web.Mvc.Html5
@model LifeManagement.ViewModels.TaskListSettingsViewModel

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()

    <div class="form-horizontalLM">
        @Html.ValidationSummary(true)
        <div class="form-group">
            @Html.LabelFor(model => model.Date, htmlAttributes: new { @class = "control-label LMсol-md-3" })
            <div class="LMсol-md-9">              
                @Html.Html5EditorFor(model => model.Date, InputTypes.InputType.Text, htmlAttributes: new { @required = "true", @class = "datepicker longer", @value = ViewBag.Date, @readonly = "readonly" })
                <br>
                @Html.ValidationMessageFor(model => model.Date)
            </div>
        </div>
        <div class="form-group">
            @Html.LabelFor(model => model.TimeToFill, htmlAttributes: new {@class = "control-label LMсol-md-3"})
            <div class="LMсol-md-9 formaReadOnly">
                @Html.Html5EditorFor(model => model.TimeToFill, htmlAttributes: new {@value = ViewBag.Time})
                <input type="text" id="Hours" value="@ViewBag.Hours" disabled />
                @LifeManagement.Resources.ResourceScr.hours
                <input type="text" id="Minutes" value="@ViewBag.Minutes" disabled />
                @LifeManagement.Resources.ResourceScr.minutes
                <div class="sliderSpend sliderLong"></div>
                <br>
                @Html.ValidationMessageFor(model => model.TimeToFill)
            </div>
        </div>
        <div class="form-group">
            @Html.LabelFor(model => model.ProjectId, htmlAttributes: new { @class = "control-label LMсol-md-3" })
            <div class="LMсol-md-9">
                @Html.DropDownList("ProjectId")
                @Html.ValidationMessageFor(model => model.ProjectId)
            </div>
        </div>

        <div class="buttonbar">
            <input type="submit" value="@LifeManagement.Resources.ResourceScr.GenerateList" class="btn btn-default fullsize" />
        </div>
    </div>
}